@model RPM_3_Course.Models.PostViewModel
@{ ViewData["Title"] = "Лента"; }

<div style="margin: 0 75% 0 15%; width: 10%;">
    <a class="btn btn-outline-primary" asp-action="Profile">Назад</a><br />
</div>
@foreach (var item in Model.posts)
{

<div style="margin: 0 70% 0 10%; width: 20%;">
    <a asp-action="OtherUser" asp-controller="home" asp-route-id="@item.UserId">Пользователь №@Html.DisplayFor(modelItem => item.UserId)</a>
   <p style="color:white"> @Html.DisplayFor(modelItem => item.Date)</p>
</div>

                <div style="margin: 0 45% 0 45%; width: 10%;color: aquamarine;">
                    <p> @Html.DisplayFor(modelItem => item.Title)</p>
                </div>
                <div style=" margin: 0 25% 0 25%; width: 50%;">                                                     
                    <img align="middle" width="490" height="400" src="@Url.Content(item.Pictureepost.Path)">
                </div>
                <div style=" margin: 0 25% 0 25%; width: 50%; color:lightskyblue">
                <p> @Html.DisplayFor(modelItem => item.Message)</p>
                </div>
}

